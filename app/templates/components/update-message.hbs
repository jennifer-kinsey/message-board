{{#if updateMessageForm}}
  <h1>Revise Question by {{message.poster}}</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="poster">Username:</label>
        {{input value=poster id="poster" placeholder=message.poster}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" placeholder=message.date}}
      </div>

      <div class="form-group">
        <label for="time">Time</label>
        {{input value=time id="time" placeholder=message.time}}
      </div>

      <div class="form-group">
        <label for="title">Question Subject</label>
        {{textarea input value=title id="title" placeholder=message.title}}
      </div>

      <div class="form-group">
        <label for="body">Question:</label>
        {{textarea input value=body id="body" placeholder=message.body}}
      </div>

      <div class="form-group">
        <label for="code">Code you've tried:</label>
        {{textarea input value=code id="code" placeholder=message.code}}
      </div>

      <button class="btn btn-default" {{action 'update' message}}>Save Update</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-default" {{action 'updateMessageForm'}}>Update Question</button>
{{/if}}
