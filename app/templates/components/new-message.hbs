{{#if addNewMessage}}
  <h1>Ask a Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="poster">Username:</label>
        {{input value=poster id="poster"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date"}}
      </div>

      <div class="form-group">
        <label for="time">Time</label>
        {{input value=time id="time"}}
      </div>

      <div class="form-group">
        <label for="title">Question Subject</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="body">Question:</label>
        {{input value=body id="body"}}
      </div>

      <div class="form-group">
        <label for="code">Code you've tried:</label>
        {{input value=code id="code"}}
      </div>

      <button {{action 'saveMessage'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'messageFormShow'}}>Ask Question</button>
{{/if}}
