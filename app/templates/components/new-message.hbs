{{#if addNewMessage}}
  <h1>Ask a Question</h1>
  <div class="ask">
    <form>
      <div class="form-group">
        <label for="poster">Username:</label><br>
        {{input value=poster id="poster"}}
      </div>

      <div class="form-group">
        <label for="date">Date:</label><br>
        {{input value=date id="date"}}
      </div>

      <div class="form-group">
        <label for="time">Time:</label><br>
        {{input value=time id="time"}}
      </div>

      <div class="form-group">
        <label for="title">Question Subject:</label><br>
        {{textarea input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="body">Question:</label><br>
        {{textarea input value=body id="body"}}
      </div>

      <div class="form-group">
        <label for="code">Code you've tried:</label><br>
        {{textarea input value=code id="code"}}
      </div>

      <button class="btn btn-default" {{action 'saveMessage'}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-default" {{action 'messageFormShow'}}>Ask Question</button>
{{/if}}
